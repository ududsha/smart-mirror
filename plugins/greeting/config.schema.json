                              "title":"Morning Greetings",
                              "items":[
                                  {
                                    "type":"section",
                                    "legend":"{{value}}",
                                    "items":[
                                      {
                                        "key":"greeting.morning[]",
                                        "valueInLegend": true
                                      }
                                    ]
                                  }
                                ]
                          },
                          {
                                "type":"tabarray",
                                "title":"Midday Greetings",
