{
    "schema": {
        "greeting": {
            "type": "object",
            "title": "Greetings",
            "properties": {
                "option":{
                  "type":"string",
                  "title":"How would you like greetings displayed?",
                  "enum":[
                    "allDay",
                    "time"
                  ]
                  },
                "allDay": {
                    "type": "array",
                    "title": "Night Greeting",
                    "items": {
                        "type": "string"
                    }
                },
                "night": {
                    "type": "array",
                    "title": "Night Greeting",
                    "items": {
                        "type": "string"
                    }
                },
                "morning": {
                    "type": "array",
                    "title": "Morning Greeting",
                    "items": {
                        "type": "string"
                    }
                },
                "midday": {
                    "type": "array",
                    "title": "Midday Greeting",
                    "items": {
                        "type": "string"
                    }
                },
                "evening": {
                    "type": "array",
                    "title": "Evening Greeting",
                    "items": {
                        "type": "string"
                    }
                }
            }
        }
    },
